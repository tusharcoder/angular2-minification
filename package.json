{
  "name": "angular2-minification",
  "version": "1.0.0",
  "private":true,
  "description": "This is the angular 2 app minified",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean": "rm -rf dist",
    "serve": "http-server . -p 9001",
    "build": "npm run clean && tsc",
    "build_prod": "npm run build && browserify -s main dist/main.js > dist/bundle.js && npm run minify",
    "minify": "uglifyjs dist/bundle.js --screw-ie8 --compress --mangle --output dist/bundle.min.js"
  },
  "author": "Tushar Agarwal <tushar.coder@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/core-js": "^0.9.34",
    "browserify": "^13.0.1",
    "http-server": "^0.9.0",
    "typescript": "^2.0.3",
    "uglifyjs": "^2.4.10"
  },
  "dependencies": {
    "@angular/common": "^2.1.0",
    "@angular/compiler": "^2.1.0",
    "@angular/core": "^2.1.0",
    "@angular/platform-browser": "^2.1.0",
    "@angular/platform-browser-dynamic": "^2.1.0",
    "es6-shim": "^0.35.1",
    "reflect-metadata": "^0.1.3",
    "rxjs": "^5.1.0",
    "zone.js": "^0.7.6"
  }
}
